singleuser:
  image:
    # A docker container with a number of kernels and ability to connect to Jib Spark.
    name: "heliumdatastage/all-spark-notebook"
    tag: "v0.1"
  profileList:
    - display_name: "Python and R kernels with Spark connectivity."
      description: "Python and R kernels with Spark connectivity."
      default: true
    - display_name: "Datascience environment"
      description: "Data science kernels and tools: Python, R, and Julia."
      kubespawner_override:
        image: jupyter/datascience-notebook:dc9744740e12
        service_account: spark
    - display_name: "Tensorflow Environment"
      description: "Tensorflow and Keras machine learning libraries."
      kubespawner_override:
        image: jupyter/tensorflow-notebook:dc9744740e12
        service_account: spark
    - display_name: "Spark Notebook on a GPU Server"
      description: "Spawns a notebook server with access to one GPU"
      kubespawner_override:
        image: jupyter/datascience-notebook:dc9744740e12
        extra_resource_limits:
          nvidia.com/gpu: "1"
    - display_name: "Spark Notebook on a GPU Server"
      description: "Spawns a notebook server with access to one GPU"
      kubespawner_override:
        extra_resource_limits:
          nvidia.com/gpu: "1"

# This token is generated by reading ~/.jib
# during install. ~/.jib must contain a single line that is the token.
proxy:
  secretToken: ""
